        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.eventos.Principal"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.eventos.TelaLocaisEventos"
            android:label="@string/title_activity_tela_locais_eventos" >
        </activity>
        <activity
            android:name="br.com.eventos.TelaSobre"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="br.com.eventos.DetalheLocalEvento"
            android:label="@string/title_activity_detalhe_local_evento" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
